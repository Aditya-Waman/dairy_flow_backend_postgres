{
  "name": "dairyflow-backend",
  "version": "1.0.0",
  "description": "DairyFlow Backend API with Fastify, TypeScript, and PostgreSQL",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "npm install --include=dev && tsc",
    "start": "node dist/index.js",
    "seed": "tsx src/scripts/seed.ts",
    "clear": "tsx src/scripts/clearDataSQL.ts",
    "clear-old": "tsx src/scripts/clearData.ts",
    "migrate:add-feed-price": "tsx src/scripts/addFeedPriceColumn.ts",
    "migrate:add-historical-prices": "tsx src/scripts/addHistoricalPriceColumns.ts",
    "test-connection": "tsx src/scripts/testConnection.ts",
    "test-historical-prices": "tsx src/scripts/testHistoricalPrices.ts",
    "test-api-response": "tsx src/scripts/testApiResponse.ts",
    "setup-timezone": "tsx src/scripts/setupTimezone.ts",
    "check-timezone": "tsx src/scripts/checkTimezone.ts",
    "test-timezone": "tsx src/scripts/testTimezoneFunctionality.ts",
    "production-check": "tsx src/scripts/productionReadinessCheck.ts",
    "typecheck": "tsc --noEmit",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate -d src/config/database.ts",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d src/config/database.ts",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert -d src/config/database.ts"
  },
  "keywords": [
    "fastify",
    "postgresql",
    "typescript",
    "dairy",
    "farm-management"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/jwt": "^8.0.0",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^4.0.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.5",
    "fastify": "^4.28.1",
    "node-cron": "^3.0.3",
    "pg": "^8.11.3",
    "pino": "^9.3.2",
    "pino-pretty": "^11.2.2",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.17",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^22.18.9",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.10.9",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2"
  }
}
